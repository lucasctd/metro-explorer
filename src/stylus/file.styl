.explorer-file {
    width 110px
    height 140px
    border 1px solid darkgrey
    position: absolute
    .icon {
        margin 15px auto
        display table
        color gray
    }
    .file-name {
        text-align center
        color gray
        cursor pointer
    }
    .file-name:hover {
        color black
    }
    .file-selected {
        position absolute
        width 100%
        height 100%
        background-color blueviolet
        opacity .7
        z-index: 2
    }
    .icon-area {
        position absolute
        width 100%
        height 100%
        z-index 1
    }
	.rename-input {
		border 2px dashed darkgray
		background-color transparent
		text-align center
		color gray
		width 100%
	}
}