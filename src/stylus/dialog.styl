.explorer-dialog {
    display table
    position absolute
    background-color white
    border 1px solid gray
    border-radius 10px
    z-index 11

    .close-icon {
        position absolute
        top 5px
        right 5px
        color #EE0000
        cursor pointer
        opacity: 1
        &:hover {
            opacity: .7
        }
    }

    .header {
        position relative
        height 40px
        width calc(100% - 20px) /* minus 20px of padding (left & right)*/
        padding 10px
    }

    .content {
        position relative
        width calc(100% - 20px)
        height auto
        top 40px
        padding 10px
        overflow-x hidden
        overflow-y auto
    }

    .footer {
        position relative
        width calc(100% - 20px) /* minus 20px of padding (left & right)*/
        height 50px
        padding 10px
        border-top 1px solid gray
    }
}

.explorer-dialog.global {
	z-index: 9999
}

.explorer-modal {
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    background-color gray
    opacity .9
    z-index 10
}

.explorer-modal.global {
	position: fixed
    z-index: 9998
}

