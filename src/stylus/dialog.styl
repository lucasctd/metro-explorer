.explorer-dialog {
    display table
    margin 100px auto
    position absolute
    top 0
    left 0
    bottom 0
    right 0
    background-color white
    border 1px solid gray
    border-radius 10px
    z-index 11

    .close-icon {
        position absolute
        top 5px
        right 5px
        color #EE0000
        cursor pointer
    }

    .content {
        width calc(100% - 20px)
        height auto
        position absolute
        top 40px
        padding 10px
    }
}
.explorer-modal {
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    background-color gray
    opacity .9
    z-index 10
}
