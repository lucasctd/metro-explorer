@import "mixins"

.explorer-context-menu {
    position fixed
    width 150px
    height auto
    background-color white
    border 1px solid gray
    z-index 3
    shadow()
    a {
        display inline-block
        padding 10px
        color: inherit
        text-decoration none
    }
    .option {
        width auto
        color #a9a9a9
        background-color #fff
        margin-left 5px
        margin-right 5px
        cursor pointer
        font-weight bolder
    }
    .option:hover {
        color white
        background-color gray
    }
	.disabled {
		cursor default;
		a {
			cursor default; opacity: .5;
		}
	}
    .disabled:hover {
        color #a9a9a9 !important
        background-color #fff !important
	}
    .box {
        margin-top 3px
        margin-bottom 3px
    }
	min-height 75px
}