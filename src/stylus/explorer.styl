.explorer-component {
    position absolute
    border 2px dashed gray
}

.explorer-fade-enter-active, .explorer-fade-leave-active {
  transition opacity .4s
}

.explorer-fade-enter, .explorer-fade-leave-to {
  opacity 0
}

.explorer-move-button {
	position: absolute
    bottom: 10px
	right: 10px    
    width: 143px
    height: 35px
	color: white
}

.explorer-move-button.enabled {
	background-color: darkgray
}

.explorer-move-button.disabled {
    background-color: lightgray;
    box-shadow: 1px 1px 2px #888888;
}

@import "context-menu.styl"
@import "dialog.styl"
@import "file.styl"