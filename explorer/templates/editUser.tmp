<div class="_center">
	<div style="margin-top: 30px;">
		<center>
			<span id="userIcon" class="mif-user mif-4x"/>
			<p id="editUserHeader" class="txtcenter gray bold">Profile Update</p>
		</center>
	</div>
	<br />
	<form id="updateUserForm" action="/updateUser">
		<input type="hidden" name="_action" value="updateUser"/>
		<input type="hidden" id="loading" value=""/>
		<table class="_center">
			<tr>
				<td>
					<span data-role="hint" data-hint-background="bg-blue" data-hint-color="fg-white" data-hint-mode="2" data-hint="Edit your name here">
							<div class="input-control text margin20 no-margin-top no-margin-bottom">
								<span class="mif-pencil prepend-icon"></span>
								<input type="text" name="Name" placeholder="My Name"/>
							</div>
					</span>
				</td>
			</tr>
			<tr>
				<td>
					<div class="input-control text margin20 no-margin-top no-margin-bottom">
						<span class="mif-mail prepend-icon"></span>
						<input type="text" name="Email" placeholder="my@email.com"/>
					</div>
				</td>
			</tr>
			<tr>
				<td>
					<div class="input-control password margin20 no-margin-top no-margin-bottom" data-role="input">
						<span class="prepend-icon mif-key"></span>
						<input type="password" name="New_Password" placeholder="New Password"/>
						<button class="button helper-button reveal"><span class="mif-looks"></span></button>
					</div>
				</td>
			</tr>
			<tr>
				<td>
					<div class="input-control password margin20 no-margin-top no-margin-bottom" data-role="input">
						<span class="prepend-icon mif-key"></span>
						<input type="password" name="Current_Password" placeholder="Current Password"/>
						<button class="button helper-button reveal"><span class="mif-looks"></span></button>
					</div>
				</td>
			</tr>
			<tr>
				<td>
					<center>
						<button id="buttonUpdateUser" class="explorerButton margin20">Update</button>
					</center>
				</td>
			</tr>
		</table>
	</form>
</div>
<script>
	$("#userIcon").addClass($("#theme").val().replace("bg", "fg"));
	$("#updateUserForm").find(".input-control").css("width", "300px");
	startAutoSubmit("updateUserForm");
	$.post("/getUser", function( data ) {
		if(data.success){
			$("[name=Name]").val(data.user.nom);
			$("[name=Email]").val(data.user.email);
		}
	}, 'json');
	$(document).on('updateUserEvent', function (e, data){
		$("#menuUserName, title").html("Welcome " + data.val);
		explorer.closeBaseDialog();
	});
</script>